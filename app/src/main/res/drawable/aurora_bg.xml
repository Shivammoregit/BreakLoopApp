<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:centerX="30%"
                android:centerY="20%"
                android:startColor="#3327AE60"
                android:endColor="#00121212"
                android:angle="45" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="700dp"
                android:centerX="70%"
                android:centerY="80%"
                android:startColor="#33DA03B5"
                android:endColor="#00121212"
                android:angle="90" />
        </shape>
    </item>
</layer-list>
